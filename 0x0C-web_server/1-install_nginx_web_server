#!/usr/bin/env bash

# Install Nginx
apt-get update
apt-get install -y nginx

# Configure Nginx to listen on port 80
sed -i 's/80 default_server;/80 default_server;\n        listen 80;/g' /etc/nginx/sites-available/default

# Reload Nginx configuration
nginx -s reload

# Create a basic HTML file with "Hello World!"
echo "<html><head><title>Hello World!</title></head><body><h1>Hello World!</h1></body></html>" > /var/www/html/index.html

# Script execution completed
echo "Nginx installed and configured. It is listening on port 80. When querying Nginx at its root / with a GET request using curl, it will return a page that contains the string 'Hello World!'"
